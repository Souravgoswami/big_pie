#!/usr/bin/env ruby
$-v = true

begin
	require 'big_pie'
rescue LoadError
	abort "BigPie isn't installed. Please install the gem before running this interactive console"
end

n = (ARGV[0] || rand(50..5000)).to_i

pi = BigPie.calculate(n).join.tap { |x| x[1, 0] = ?. }
puts "Here's #{n} Pi digits for you:\n#{pi}\n"
